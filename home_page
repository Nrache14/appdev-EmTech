import 'package:flutter/material.dart';
import 'package:instagram/circle.dart';
import 'package:instagram/square.dart';

class HomePage extends StatelessWidget {
  final List _posts = [
    // 'lib/images/gojo.jpg',
    'asd 1',
    'post 2',
    'post 3',
    'post 4',
    'post 5',
    'post 6',
  ];

  final List _stories = [
    'story 0',
    'story 2',
    'story 3',
    'story 4',
    'story 5',
    'story 6',
  ];

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
          body: Column(
        children: [
          //ig storeies
          Container(
              height: 150,
              child: ListView.builder(
                  itemCount: _stories.length,
                  scrollDirection: Axis.horizontal,
                  itemBuilder: (context, index) {
                    return MyCircle(
                      child: _stories[index],
                    );
                  })),
          //ig post

          Expanded(
            flex: 4,
            child: ListView.builder(
                itemCount: _posts.length,
                itemBuilder: (context, index) {
                  return MySquare(
                    child: _posts[index],
                  );
                }),
          ),
        ],
      )),
    );
  }
}
